{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "espidf",
        "name": "Launch",
        "request": "launch",
        "debugPort": 9998,
        "logLevel": 2,
        "mode": "auto",
        "verifyAppBinBeforeDebug": false,
        "tmoScaleFactor": 1,
        "initGdbCommands": [
          "target remote :3333",
          "symbol-file ${workspaceFolder}\\build\\${command:espIdf.getProjectName}.elf",
          "mon reset halt",
          "flushregs",
          "thb app_main"
        ],
        "env": {
          "CUSTOM_ENV_VAR": "SOME_VALUE"
        }
      }
    ]
  }
  